      "is_not",
      "logical_and",
      "logical_or",
      "logical_not"
    ],
    "Bitwise Operators": [
      "bitwise_and",
      "bitwise_and_assignment",
      "bitwise_or",
      "bitwise_or_assignment",
      "bitwise_not",
      "bitwise_not_assignment",
      "bitwise_xor",
