{
  "meta": {
    "language": "nim",
    "language_version": "1.4",
    "language_name": "Nim"
  },
  "categories": {
    "Conditional Statements (ifs)": [
      "if_conditional",
      "if_else_conditional",
      "if_elseif_conditional",
      "if_elseif_else_conditional",
      "ternary_conditional",
      "switch_statement"
    ],
    "Loops": [
      "while_loop",
      "for_loop"
    ],
    "Iterations": [
      "each_iteration",
      "map_iteration",
      "filter_iteration",
      "fold_iteration"
    ]
  },
  "control_structures": {
    "if_conditional": {
      "code": "if condition:\n  statements"
    },
    "if_else_conditional": {
      "code": "if condition:\n  statements\nelse:\n  statements"
    },
    "if_elseif_conditional": {
      "code": "if condition:\n  statements\nelif:\n  statements"
    },
    "if_elseif_else_conditional": {
      "code": "if condition:\n  statements\nelif condition:\n  statements\nelse:\n  statements"
    },
    "ternary_conditional": {
      "code": "if condition:\n  exprIfTrue else:\n  exprIfFalse"
    },
    "switch_statement": {
      "code": "case expression:\n  of expressionOrRange:\n    statements\n  else:\n    statements"
    },
    "while_loop": {
      "code": "while condition:\n  statements"
    },
    "for_loop": {
      "code": "for iterator in iterable:\n  statements"
    },
    "map_iteration": {
      "code": "map(function, iterable)"
    },
    "filter_iteration": {
      "code": "filter(function, iterable)"
    }
  }
}
